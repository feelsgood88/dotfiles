# i3status configuration file.
# see "man i3status" for documentation.

general {
	output_format = "i3bar"
	separator = "|"
  colors = true
	color_good = "#bde077"
	color_degraded = "#fea63c"
	color_bad = "#d23d3d"
  interval = 5
}

order += "wireless _first_"
order += "battery 0"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"
order += "disk /"
order += "tztime local"

wireless _first_ {
  format_up = "%essid %bitrate"
  format_down = "no wifi"
  color_bad = "#cccccc"
}

battery 0 {
  format = "bat: %percentage"
	format_down = "no bat"
	threshold_type = "percentage"
	low_threshold = 10
}

cpu_usage {
	format = "cpu: %usage"
  separator = false
}

cpu_temperature 0 {
	format = "%degrees Â°C"
}

memory {
  format = "mem: %used/%total (%percentage_used)"
}

tztime local {
  format = "%a %d %B %H:%M:%S %p"
}

disk "/" {
  format = "dsk: %used/%total (%percentage_used)"
}
